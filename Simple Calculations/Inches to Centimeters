using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace InchToCm
{
    class Program
    {
        static void Main(string[] args)
        {
            float inch = 0;
            inch = Convert.ToSingle(Console.ReadLine());
            Console.WriteLine(inch * 2.54f);
        }
    }
}
