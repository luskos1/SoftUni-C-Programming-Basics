using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace USDtoBGN
{
    class Program
    {
        static void Main(string[] args)
        {
            double usd = Convert.ToDouble(Console.ReadLine());
            double rate = 1.79549;
            double result = usd * rate;
            Console.WriteLine("{0} BGN",Math.Round(result,2));
        }
    }
}
